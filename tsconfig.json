{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./build",
    "moduleResolution": "Node",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"]
}
