{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./build",
    "moduleResolution": "Node",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "include": [
      "src/**/*",
      "types/**/*"
    ]
  },
  "exclude": ["node_modules"]
}
